#include<stdio.h>
int main()
{
int num, num2, n;
num=1;
printf("\n\t Imprimir os números de 1 até 50 : \n");
while (num<=50)
{
printf(" %d\n",num);
num++;
}

// Exercício 2: Imprima os números na forma decrescente 50, 49, ...1
num2=50;
printf("\n\t Imprimir os números de 50 até 1 : \n");
while (num2>=1)
{
printf(" %d\n",num2);
num2--;
}
// Exercício 3: Permita que o usuário digite o número inicial, e mostre em ordem decrescente até 0;
printf ("escreva um numerumor maior que 0:");
scanf ("%d", &n);
while (n>=0) {
    printf ("%d\n", n);
    n--;
}

return 0;
}

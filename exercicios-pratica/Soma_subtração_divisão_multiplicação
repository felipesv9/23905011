# include <stdio.h>
 int main () {
   
 float num1, num2, soma, subtracao, divisao, multiplicacao;
 
 printf("digite primeiro numero: ");
 scanf("%f", &num1);
 
 printf("digite segundo numero: ");
 scanf("%f", &num2);
 
 soma=num1+num2;
 printf("a soma dos numeros eh: %.2f\n", soma);
 
 subtracao=num1-num2;
 printf("a subtracao dos numeros eh: %.2f\n", subtracao);
 
 divisao=num1/num2;
 printf("a divisao dos numeros eh: %.2f\n", divisao);
 
 multiplicacao=num1*num2;
 printf("a multiplicacao dos numeros eh: %.2f\n", multiplicacao);
 
 return 0;
 }
 

#include <stdio.h>
#include <math.h>

int main()
{ 
    float a,b,c,delta,x1,x2,raiz;
    
    printf("Escreva o coeficiente a: ");
    scanf("%f", &a);
    
    printf("Escreva o coeficiente b: ");
    scanf("%f", &b);
    
    printf("Escreva o coeficiente c: ");
    scanf("%f", &c);
    
    delta= pow(b,2)-4*a*c;
    if(delta>=0){
        x1=-b+sqrt(delta) / (2*a);
        x2 = (-b - sqrt(delta)) / (2*a);
        printf("As raizes sao: x1 = %.2f e x2 = %.2f", x1, x2);
    } else {
        printf("A equacao nao possui raizes.");
    }
    
    return 0;
}

    

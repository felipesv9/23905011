#include<stdio.h> 

int main() {
    int escolha;

    printf("Escolha seu plano favorito");
    printf("1. plano basico");
    printf("2. plano padrão");
    printf("3. plano premium");
    printf("Escolha um produto (1-3)");
    scanf("%i", &escolha); 

    switch(escolha){

    case1:
    printf("Plano basico");
    printf("preço: R$ 29,90");

    break;

    case2:
    printf("Plano padrão");
    printf("preço: R$ 49,90");

    break;

    case3:
    printf("Plano premium");
    printf("preço: R$ 79,90");

    break;
        
    default:

    printf("Plano invalido");

    break;
    }
    
return 0;
}
